# Lyft bless ssh alias
source '/Users/dmortlock/go/src/github.com/lyft/blessclient/lyftprofile'

# Go
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# General
alias ls="ls -G"
alias ll="ls -lh"
alias la="ls -a"
alias rm="rm -rf"
alias src="cd ~/go/src/github.com/lyft"

# Neovim
export EDITOR="nvim"
alias v=nvim
alias vi=nvim
alias vim=nvim

# The Fuck
eval $(thefuck --alias)
eval $(thefuck --alias FUCK)

# Onebox
alias onebox_reset="ssh-keygen -R dmortlock-onebox.dev.lyft.net"
alias onebox_ssh="ssh dmortlock-onebox.dev.lyft.net"

# Bash completion
[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion

